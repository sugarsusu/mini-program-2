<!--pages/home/home.wxml-->
<view>
  <SearchInput></SearchInput>
  <!-- 轮播图 -->
  <view class="home-swiper">
    <swiper
      autoplay
      circular
      indicator-dots
    >
      <swiper-item
        wx:for="{{swiperList}}"
        wx:key="goods_id"
      >
      <navigator>
        <image mode="widthFix" 
          src="{{item.image_src}}"
        />
      </navigator>
      </swiper-item>
    </swiper>
  </view>

  <!-- 分类导航 -->
  <view class="home-cate">
    <navigator
      wx:key="name"
      wx:for="{{cateList}}"
    >
      <image mode="widthFix" src="{{item.image_src}}"/>
    </navigator>
  </view>
</view>
